{% extends 'ElorfinUserInterfaceBundle::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets debug=false filter='cssrewrite,cssmin' output='css/music-font.min.css'
        'fonts/MusicFont/less/music-font.less'
    %}
    <link rel="stylesheet" media="screen" type="text/css" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block title %}Music Tools{% endblock %}

{% set header_links = header_links|default([]) %}
{% set breadcrumb_links = breadcrumb_links|default([]) %}

{% block angular_app %}data-ng-app="MusicTools" data-ng-cloak=""{% endblock %}

{% block body %}
    {# Top menu #}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        {% include 'header-authenticated.html.twig' %}
    {% else %}
        {% include 'header.html.twig' %}
    {% endif %}

    {# Sidebar #}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        {% include 'sidebar.html.twig' %}
    {% endif %}

    {# Content #}
    {% block content_container %}
    <div class="content container-fluid {% block content_class %}{% endblock %}">
        {# User messages #}
        {% for message in app.session.getFlashBag.get('error') %}
        <div class="alert alert-error">{{ message|trans }}</div>
        {% endfor %}

        {% for message in app.session.getFlashBag.get('warning') %}
        <div class="alert alert-warning">{{ message|trans }}</div>
        {% endfor %}

        {% for message in app.session.getFlashBag.get('success') %}
        <div class="alert alert-success">{{ message|trans }}</div>
        {% endfor %}

        {# Page header #}
        {% block content_header %}
        <div class="content-header">
            {# Page title #}
            <h1>{% block content_title %}{% endblock %}</h1>

            {# Breadcrumb #}
            {% if breadcrumb_links is defined and breadcrumb_links is not empty %}
            {#<ol class="breadcrumb">
                {% for breadcrumb_link in breadcrumb_links %}
                    {% if not loop.last %}
                        &#123;&#35; Add link to page &#35;&#125;
                        <li><a href="{{ breadcrumb_link.url }}">{{ breadcrumb_link.label|trans }}</a></li>
                    {% else %}
                        &#123;&#35; Add page label &#35;&#125;
                        <li class="active">{{ breadcrumb_link.label|trans }}</li>
                    {% endif %}
                {% endfor %}
            </ol>#}
            {% endif %}
        </div>
        {% endblock %}

        {# Page Content #}
        {% block content %}{% endblock %}
    </div>
    {% endblock %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        var assetDirectory = '{{ asset('bundles') }}';
    </script>

    {# Angular JS #}
    {% javascripts debug=false filter='jsmin' output='vendor/angular/angular-js.js'
        '@ElorfinUserInterfaceBundle/Resources/public/js/libraries/angular/angular.min.js'
        '@ElorfinUserInterfaceBundle/Resources/public/js/libraries/angular/angular-touch.min.js'
        '@MusicToolsInstrumentBundle/Resources/public/js/Guitar/*'
        '@MusicToolsInstrumentBundle/Resources/public/js/Guitar/Directive/*'
        '@MusicToolsInstrumentBundle/Resources/public/js/GuitarNeck/*'
        '@MusicToolsInstrumentBundle/Resources/public/js/GuitarNeck/Directive/*'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script type="text/javascript">
        angular.module('MusicTools', [
            'Guitar',
            'GuitarNeck'
        ]);
    </script>
{% endblock %}
