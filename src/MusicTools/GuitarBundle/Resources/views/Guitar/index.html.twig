{% extends '::base.html.twig' %}

{% block content %}
    <h1>Guitar list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Headstock</th>
                <th>Strings</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('guitar_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.headstock }}</td>
                <td>{{ entity.strings }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('guitar_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('guitar_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('guitar_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
