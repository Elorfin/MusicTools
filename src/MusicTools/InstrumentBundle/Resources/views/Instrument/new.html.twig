{% extends '::base.html.twig' %}

{% set header_links = [
    { label: 'Create', icon: 'fa fa-fw fa-check', url: '' },
    { label: 'Cancel', icon: 'fa fa-fw fa-times', url: path('instrument') },
] %}

{% set breadcrumb_links = [
    { label: 'My guitars', url: path('instrument') },
    { label: 'Add a new guitar', url: '' },
] %}

{% block content_title %}Add a new instrument{% endblock %}

{% block content %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    {{ form_widget(form) }}
                </div>
            </div>
        </div>

        <div class="col-md-12 text-right">
            <button type="submit" class="btn btn-primary">
                <span class="fa fa-check"></span>
                Create
            </button>

            <a href="{{ path('instrument') }}" class="btn btn-default">
                <span class="fa fa-times"></span>
                Cancel
            </a>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
