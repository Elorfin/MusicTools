{% extends '::base.html.twig' %}

{% set header_links = [
    { label: 'Create', icon: 'fa fa-fw fa-check', url: '' },
    { label: 'Cancel', icon: 'fa fa-fw fa-times', url: path('song') },
] %}

{% set breadcrumb_links = [
    { label: 'My songbook', url: path('song') },
    { label: 'Add a new song', url: '' },
] %}

{% block content_title %}Add a new song{% endblock %}

{% block content %}
    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-3">
                {{ form_row(form.cover) }}
            </div>

            <div class="col-md-9">
                <div class="panel panel-default">
                    <div class="panel-body">
                        {{ form_row(form.title) }}
                        {{ form_row(form.artist) }}
                        {{ form_row(form.rating) }}
                        {{ form_row(form.mastery) }}
                    </div>
                </div>

                <div class="text-right">
                    <button type="submit" class="btn btn-primary">
                        <span class="fa fa-check"></span>
                        Create
                    </button>

                    <a href="{{ path('song') }}" class="btn btn-default">
                        <span class="fa fa-times"></span>
                        Cancel
                    </a>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
