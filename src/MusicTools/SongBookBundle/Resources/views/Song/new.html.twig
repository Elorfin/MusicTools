{% extends 'MusicToolsSongBookBundle::layout.html.twig' %}

{% block content_title %}Add song{% endblock %}

{% block content %}
    <h1 class="page-header">
        <div class="icon">
            <span class="fa fa-plus"></span>
        </div>
        Add a new song
    </h1>

    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-3">
                {{ form_row(form.cover) }}
            </div>

            <div class="col-md-9">
                <div class="panel panel-default">
                    <div class="panel-body">
                        {{ form_row(form.title) }}
                        {{ form_row(form.artist) }}
                        {{ form_row(form.rating) }}
                        {{ form_row(form.mastery) }}
                    </div>
                </div>

                <div class="text-right">
                    <button type="submit" class="btn btn-primary">
                        <span class="fa fa-check"></span>
                        Create
                    </button>

                    <a href="{{ path('song') }}" class="btn btn-default">
                        <span class="fa fa-times"></span>
                        Cancel
                    </a>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
