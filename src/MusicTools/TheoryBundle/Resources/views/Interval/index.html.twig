{% extends '::base.html.twig' %}

{% block content %}
    <h1 class="page-header">Intervals</h1>

    <div class="panel panel-default">
        <table class="table table-hover table-stripped">
            <thead>
                <tr>
                    <th>Semitones</th>
                    <th>Name</th>
                    <th>Symbol</th>
                </tr>
            </thead>

            <tbody>
                {% for entity in entities %}
                <tr>
                    <td>{{ entity.value }}</td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.symbol }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}